<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="date"
            type="String" />
        <variable
            name="update"
            type="String" />

        <variable
            name="backIndex"
            type="Integer" />
        <variable
            name="wea"
            type="String" />
        <variable
            name="title"
            type="String" />
        <variable
            name="isshow"
            type="boolean" />
    </data>

    <LinearLayout
        android:layout_width="728px"
        android:layout_height="417px"
        android:background="@drawable/bk1"
        android:orientation="vertical"
        app:setBackImage="@{backIndex}">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="2px"
            android:layout_weight="1.2"
            android:orientation="horizontal">
            <ImageView
                android:visibility="gone"
                android:layout_margin="5px"
                android:src="@drawable/logo"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                />
            <TextView
                android:layout_marginLeft="10px"
                android:textStyle="bold"
                android:textColor="#ff0"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:gravity="center_vertical|left"
                android:text="阳明山万和湖景区"
                android:textSize="@dimen/maintitle" />

            <TextView
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:gravity="center_horizontal|bottom"
                android:text="@{update}"
                android:textSize="35sp" />

            <TextView
                android:textColor="#ff0"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:gravity="center"
                android:paddingRight="9px"
                android:text="@{date}"
                android:textSize="@dimen/maindate" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5.5">
        <TextView
            android:visibility="invisible"
            isShow="@{isshow}"
            android:textColor="#fff"
            android:gravity="center_horizontal|top"
            android:textSize="35sp"

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"/>
        <LinearLayout
            android:id="@+id/contenter"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:orientation="horizontal" />
            <TextView
                android:textStyle="bold"
                android:textColor="#fff"
                android:gravity="center_vertical|right"
                android:textSize="17sp"
                android:text="双牌气象"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"/>
        </LinearLayout>

        <LinearLayout
            android:background="#555"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:orientation="horizontal">

            <TextView

                android:textColor="#fff"
                android:background="#333"
                android:gravity="center"
                android:textSize="@dimen/mainwea"
                android:text="天气预报"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <com.kd.appweather.beans.MarqueeView
                setWeainfo="@{wea}"
                app:marqueeview_text_color="#fff"
                app:marqueeview_text_speed="1.5"
                app:marqueeview_text_size="25"
                android:background="#555"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="5" />
        </LinearLayout>
    </LinearLayout>
</layout>